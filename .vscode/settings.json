{
    "json.schemas": [
        {
            "fileMatch": [
                "/assets/*.items.json"
            ],
            "schema": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "sprite": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["WEAPON", "AMMO_SUPPLY", "FOOD", "ARMOR", "COMMON"]
                        },
                    },
                    "required": ["name", "type", "sprite"],
                    "allOf": [
                        {
                            "if": {
                                "properties": {
                                    "type": { "const": "WEAPON" }
                                }
                            },
                            "then": {
                                "properties": {
                                    "weaponProperties": {
                                        "type": "object",
                                        "damage": {
                                            "type": "integer"
                                        },
                                        "durability": {
                                            "type": "integer"
                                        },
                                        "category": {
                                            "type": "string",
                                            "enum": ["SHOTGUN", "SHARP", "BLUNT", "GUN"]
                                        },
                                        "required": ["damage", "durability", "category"]
                                    },
                                },
                                "required": ["weaponProperties"]
                            }
                        },
                        {
                            "if": {
                                "properties": {
                                    "type": { "const": "AMMO_SUPPLY" }
                                }
                            },
                            "then": {
                                "properties": {
                                    "ammoProperties": {
                                        "category": {
                                            "type": "string",
                                            "enum": ["SHOTGUN", "GUN"]
                                        },
                                        "required": ["category"]
                                    }
                                },
                                "required": ["ammoProperties"]
                            }
                        }
                    ]
                },
            }
        }
    ],
}
